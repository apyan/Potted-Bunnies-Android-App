<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:id="@+id/frag_gallery">

    <ScrollView
        android:id="@+id/scrollView_00"
        android:layout_width="match_parent"
        android:fadeScrollbars="false"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="2dp"
            android:orientation="vertical"
            tools:ignore="ObsoleteLayoutParam,RtlSymmetry">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_marginTop="55dp" >

                <Button
                    android:id="@+id/gallery_00"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="bottom|start"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:text="@string/gallery_000"
                    tools:ignore="ButtonStyle,RtlSymmetry" />

                <Button
                    android:id="@+id/gallery_01"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="bottom|start"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:text="@string/gallery_001"
                    tools:ignore="ButtonStyle,RtlSymmetry" />
            </TableRow>

            <Button
                android:id="@+id/gallery_02"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:textSize="20sp"
                android:gravity="bottom|start"
                android:paddingBottom="15dp"
                android:paddingStart="15dp"
                android:text="@string/gallery_002"
                tools:ignore="RtlSymmetry" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="125dp">

                <Button
                    android:id="@+id/gallery_03"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="bottom|start"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:text="@string/gallery_003"
                    tools:ignore="ButtonStyle,RtlSymmetry" />

                <Button
                    android:id="@+id/gallery_04"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="bottom|start"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:text="@string/gallery_004"
                    tools:ignore="ButtonStyle,RtlSymmetry" />
            </TableRow>

            <Button
                android:id="@+id/gallery_05"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:textSize="20sp"
                android:gravity="bottom|start"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:text="@string/gallery_005"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </ScrollView>

    <!-- Gallery title label -->
    <LinearLayout
        android:id="@+id/linearLayout_00"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:text="@string/gallery_title"
            android:background="@drawable/textfield_000"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</RelativeLayout>
